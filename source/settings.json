{
  "name": "Snacks",
  "version": "1.7.0",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    },
    {
      "variable": "welcome_image",
      "label": "Welcome image",
      "description": "1200px by 750px images recommended"
    }
  ],
  "preset_styles": {
    "preview": {
      "title_font": "primary_font",
      "body_font": "primary_font",
      "text_color": "text_color",
      "background_color": "background_color"
    },
    "presets": [
      {
        "group_name": "Classic",
        "styles": [
          {
            "style_name": "Classic #1",
            "fonts": {
              "primary_font": "Muli"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "text_color": "#000000",
              "secondary_text_color": "#666666",
              "accent_background_color": "#000000",
              "accent_text_color": "#FFFFFF",
              "error_color": "#A52A37"
            }
          },
          {
            "style_name": "Classic #2",
            "fonts": {
              "primary_font": "Helvetica"
            },
            "colors": {
              "background_color": "#141415",
              "text_color": "#F8F8F8",
              "secondary_text_color": "#C4C4C4",
              "accent_background_color": "#464649",
              "accent_text_color": "#F8F8F8",
              "error_color": "#F4ABB2"
            }
          },
          {
            "style_name": "Classic #3",
            "fonts": {
              "primary_font": "Georgia"
            },
            "colors": {
              "background_color": "#F5F5F5",
              "text_color": "#2E2E2E",
              "secondary_text_color": "#7A7A7A",
              "accent_background_color": "#2E2E2E",
              "accent_text_color": "#F5F5F5",
              "error_color": "#A52A37"
            }
          }
        ]
      },
      {
        "group_name": "Natural",
        "styles": [
          {
            "style_name": "Natural #1",
            "fonts": {
              "primary_font": "Inter"
            },
            "colors": {
              "background_color": "#F8F8F8",
              "text_color": "#0F1B27",
              "secondary_text_color": "#8A5A5A",
              "accent_background_color": "#EBE7E7",
              "accent_text_color": "#0F1B27",
              "error_color": "#A52A37"
            }
          },
          {
            "style_name": "Natural #2",
            "fonts": {
              "primary_font": "Lora"
            },
            "colors": {
              "background_color": "#EDEDEE",
              "text_color": "#1B2631",
              "secondary_text_color": "#A85A50",
              "accent_background_color": "#CFCFD1",
              "accent_text_color": "#1B2631",
              "error_color": "#992C2C"
            }
          },
          {
            "style_name": "Natural #3",
            "fonts": {
              "primary_font": "Abril Fatface"
            },
            "colors": {
              "background_color": "#FAFAF5",
              "text_color": "#2D3538",
              "secondary_text_color": "#925A50",
              "accent_background_color": "#E0E0DC",
              "accent_text_color": "#2D3538",
              "error_color": "#9B2A2F"
            }
          }
        ]
      },
      {
        "group_name": "Playful",
        "styles": [
          {
            "style_name": "Playful #1",
            "fonts": {
              "primary_font": "Helvetica"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "text_color": "#0000FF",
              "secondary_text_color": "#0000FF",
              "accent_background_color": "#FFEE54",
              "accent_text_color": "#0000FF",
              "error_color": "#D50010"
            }
          },
          {
            "style_name": "Playful #2",
            "fonts": {
              "primary_font": "Concert One"
            },
            "colors": {
              "background_color": "#FFFFFF",
              "text_color": "#000000",
              "secondary_text_color": "#F90081",
              "accent_background_color": "#9DFFFC",
              "accent_text_color": "#000000",
              "error_color": "#F90081"
            }
          },
          {
            "style_name": "Playful #3",
            "fonts": {
              "primary_font": "Chewy"
            },
            "colors": {
              "background_color": "#FDF1F0",
              "text_color": "#FF007F",
              "secondary_text_color": "#FF69B4",
              "accent_background_color": "#FFF89A",
              "accent_text_color": "#FF007F",
              "error_color": "#E3003B"
            }
          }
        ]
      }
    ]
  },
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Muli"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "text_color",
      "label": "Text",
      "default": "#000000"
    },
    {
      "variable": "secondary_text_color",
      "label": "Secondary Text",
      "default": "#666666"
    },
    {
      "variable": "accent_background_color",
      "label": "Accent Background",
      "default": "#000000"
    },
    {
      "variable": "accent_text_color",
      "label": "Accent Text",
      "default": "#FFFFFF"
    },
    {
      "variable": "error_color",
      "label": "Errors",
      "default": "#a52a37"
    }
  ],
  "options": [
    {
      "variable": "maintenance_message",
      "label": "Maintenance mode message",
      "type": "text",
      "max_length": 2048,
      "default": "We're working on our shop right now.<br /><br />Please check back soon.",
      "description": "A message visitors see when your shop is in Maintenance Mode"
    },
    {
      "variable": "welcome_header",
      "label": "Welcome header",
      "type": "text",
      "description": "Welcome header for homepage"
    },
    {
      "variable": "welcome_subheader",
      "label": "Welcome subheader",
      "type": "text",
      "description": "Welcome subheader for homepage"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products shown on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page",
      "requires": [
        "featured_products gt 0"
      ]
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 20,
      "description": "The number of products displayed per page"
    },
    {
      "variable": "show_sold_out_product_options",
      "label": "Show sold out product options",
      "type": "boolean",
      "default": true,
      "description": "Shows sold out product options in the Product page dropdowns",
      "requires": ["inventory"]
    },
    {
      "variable": "money_format",
      "label": "Price display",
      "type": "select",
      "options": [
        ["Currency sign", "sign"],
        ["Currency code with sign", "sign_and_code"]
      ],
      "default": "sign",
      "description": "Sets the display of prices in your shop"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: https://instagram.com/bigcartel"
    },
    {
      "variable": "tiktok_url",
      "label": "TikTok URL",
      "type": "text",
      "description": "Ex: https://tiktok.com/@bigcartelofficial"
    },
    {
      "variable": "bluesky_url",
      "label": "Bluesky URL",
      "type": "text",
      "description": "Ex: https://bsky.app/profile/bigcartel.com"
    },
    {
      "variable": "threads_url",
      "label": "Threads URL",
      "type": "text",
      "description": "Ex: https://threads.net/@bigcartel"
    },
    {
      "variable": "twitter_url",
      "label": "X URL",
      "type": "text",
      "description": "Ex: https://x.com/bigcartel"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: https://facebook.com/bigcartel"
    },
    {
      "variable": "snapchat_url",
      "label": "Snapchat URL",
      "type": "text",
      "description": "Ex: https://snapchat.com/add/bigcartel"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: https://pinterest.com/big_cartel"
    },
    {
      "variable": "youtube_url",
      "label": "YouTube URL",
      "type": "text",
      "description": "Ex: https://youtube.com/@BigCartelDotCom"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: https://bigcartel.tumblr.com"
    },
    {
      "variable": "bandcamp_url",
      "label": "Bandcamp URL",
      "type": "text",
      "description": "Ex: https://bigcartel.bandcamp.com"
    }
  ],
  "checkout": {
    "header_image": "{{ logo }}",
    "header_image_max_width": "600px",
    "header_image_max_height": "120px",
    "title_font": "{{ primary_font }}",
    "title_font_weight": "normal",
    "title_font_size": "22px",
    "title_color": "{{ text_color }}",
    "title_background_color": "{{ background_color }}",
    "title_vertical_padding": "27px",
    "background_color": "{{ background_color }}",
    "body_font": "{{ primary_font }}",
    "body_font_size": "14px",
    "step_border_color": "{{ accent_background_color }}",
    "step_header_color": "{{ text_color }}",
    "step_border_width": "2px",
    "step_border_style": "solid",
    "step_border_radius": "0px",
    "step_inactive_header_color": " {{ text_color }}",
    "step_header_font": "{{ primary_font }}",
    "step_background_color": "{{ background_color }}",
    "content_background_color": "{{ background_color }}",
    "content_header_background_color": "{{ background_color }}",
    "content_header_color": "{{ text_color }}",
    "content_color": "{{ text_color }}",
    "content_header_font_size": "18px",
    "content_border_color": "transparent",
    "content_border_radius": "0px",
    "error_background_color": "#ea4859",
    "error_color": "#ffffff",
    "error_border_radius": "0px",
    "error_border_color": "#ea4859",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#777777",
    "input_error_border_color": "#ea4859",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius": "0px",
    "input_border_width": "2px",
    "input_font": "{{ primary_font }}",
    "button_border_width": "0px",
    "button_border_radius": "0px",
    "button_font": "{{ primary_font }}",
    "button_hover_color": "{{ accent_text_color }}",
    "accent_background_color": "{{ accent_background_color }}",
    "button_hover_background_color": "{{ accent_background_color }}",
    "button_border_color": "{{ accent_background_color }}",
    "button_hover_border_color": "{{ accent_background_color }}",
    "button_text_transform": "none",
    "link_color": "{{ link_color }}",
    "link_hover_color": "{{ text_color }}",
    "step_header_font_size": "18px",
    "summary_color": "{{ text_color }}",
    "summary_secondary_color": "{{ text_color }}",
    "summary_item_border_color": "{{ background_color }}",
    "summary_item_list_border_color": "{{ background_color }}",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_submit_border_color": "{{ background_color }}",
    "summary_submit_border_width": "4px"
  }
}
